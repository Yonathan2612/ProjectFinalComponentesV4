<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".modulousuario.animalesu.animalesUFragment">

    <Button
        android:id="@+id/btnBuscarAnimal"
        android:layout_width="227dp"
        android:layout_height="67dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#B0423D3D"
        android:text="Buscar"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomAnimal" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="313dp"
        android:layout_height="43dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="33dp"
        android:background="#7CFFFFFF"
        android:text="Animales "
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="403dp"
        android:layout_height="57dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:background="#8FFFFFFF"
        android:text="Digite el nombre del animal que quiere buscar"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/nomAnimal"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:background="#94FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre animal"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:layout_editor_absoluteX="64dp" />

    <EditText
        android:id="@+id/nom_vulgar"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:background="#94FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/espAnimal"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:background="#94FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <EditText
        android:id="@+id/pesoAnim"
        android:layout_width="283dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="#94FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peso" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="162dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:background="#6DFFFFFF"
        android:text="ESPECIE"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_vulgar" />

    <TextView
        android:id="@+id/peso"
        android:layout_width="143dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="#6DFFFFFF"
        android:text="Peso"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/espAnimal" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#6DFFFFFF"
        android:text="Nombre"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBuscarAnimal" />
</androidx.constraintlayout.widget.ConstraintLayout>